{
  "name": "@kra-connect/node",
  "version": "0.1.0",
  "description": "Official Node.js/TypeScript SDK for KRA GavaConnect API - Tax compliance and verification for Kenya",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "kra",
    "kenya-revenue-authority",
    "gavaconnect",
    "tax-compliance",
    "pin-verification",
    "tcc-verification",
    "kenya",
    "api-client",
    "typescript",
    "nodejs"
  ],
  "author": "KRA-Connect Team <developers@kra-connect.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/kra-connect.git",
    "directory": "packages/node-sdk"
  },
  "bugs": {
    "url": "https://github.com/your-org/kra-connect/issues"
  },
  "homepage": "https://kra-connect.dev",
  "dependencies": {
    "axios": "^1.6.2",
    "axios-retry": "^4.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
